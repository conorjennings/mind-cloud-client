{{#each ideas as |idea|}}

   <div data-id="{{idea.id}}" class="one-idea thumbnail item view overlay hm-grey-light">
     <div class="mask"></div>
     <div data-id="{{idea.id}}" class="panel-body">
       <p class="idea-display">{{idea.content}}</p>
     <div class="caption">
       <div class="action-container">
          <button data-id="{{idea.id}}" class="edit-idea-button mdl-button mdl-js-button mdl-button--icon">
          <i class="material-icons">mode_edit</i>
          </button>
          <button data-id="{{idea.id}}" class="delete-idea-button mdl-button mdl-js-button mdl-button--icon">
          <i class="material-icons">delete</i>
          </button>
      </div>
    </div>
    </div>
  </div>

{{/each}}
